<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BooksController</servlet-name>
        <servlet-class>controllers.BooksController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartsController</servlet-name>
        <servlet-class>controllers.CartsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersController</servlet-name>
        <servlet-class>controllers.UsersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DiscountCodesController</servlet-name>
        <servlet-class>controllers.DiscountCodesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrdersController</servlet-name>
        <servlet-class>controllers.OrdersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplyDiscountController</servlet-name>
        <servlet-class>controllers.ApplyDiscountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllUserController</servlet-name>
        <servlet-class>controllers.GetAllUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BooksController</servlet-name>
        <url-pattern>/BooksController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartsController</servlet-name>
        <url-pattern>/CartsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersController</servlet-name>
        <url-pattern>/UsersController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DiscountCodesController</servlet-name>
        <url-pattern>/DiscountCodesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrdersController</servlet-name>
        <url-pattern>/OrdersController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplyDiscountController</servlet-name>
        <url-pattern>/ApplyDiscountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllUserController</servlet-name>
        <url-pattern>/GetAllUserController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            MainController
        </welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>BookStoreL001DS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
